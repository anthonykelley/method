<h1>Editing: <%= @person.name%></h1>

<hr />

<%= form_for @person do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>
  <br />
  <%= f.label :age %>
  <%= f.text_field :age, required: true %>
  <br />
  <%= f.label :hair_color %>
  <%= f.text_field :hair_color, required: true %>
  <br />
  <%= f.label :eye_color %>
  <%= f.text_field :eye_color, required: true %>
  <br />
  <%= f.label :gender %>
  <%= f.text_field :gender, required: true %>
  <br />
  <%= f.label :alive %>
  <%= f.check_box :alive, required: true %>
  <br />
  <%= f.submit %>
<% end %>